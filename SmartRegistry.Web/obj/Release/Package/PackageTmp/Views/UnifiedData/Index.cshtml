@using SmartRegistry.Domain.Common
@using System.Collections.Generic;
@using SmartRegistry.Domain.Entities
@using PagedList.Mvc;
@using SmartRegistry.Web.Models

<div class="container-fluid">
    <!-- Begin page -->
    <div class="container">
        <!-- start page title -->
        <div class="row z2">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="page-title mb-0 font-size-18">Списък информационни обекти</h4>
                    <div class="page-title-right">
                        
                        <ul class="btn-list">
                            <li> <a href="#" class="btn btn-success waves-effect waves-light show-hide-btn"> <i class="mdi mdi-plus-box-multiple-outline"></i> Създай обект </a>
                                 <ul>
                                     @if (ViewBag.UserAccess != null)
                                     {
                                         var user = (User)ViewBag.UserAccess;
                                         if (user.HasPermission(PermissionEnum.ManageInfoObjects))
                                         {
                                             <li>
                                                 <a href="@Url.Action("CreateReferential", "UnifiedData")">Създай референтен обект</a>
                                             </li>
                                             <li>
                                                 <a href="@Url.Action("CreateComposite", "UnifiedData")">Създай съставен обект</a>
                                             </li>
                                             <li>
                                                 <a href="@Url.Action("Create", "UnifiedData")">Създай информационен обект</a>
                                             </li>
                                         }

                                     }
                                 </ul>
                            </li>
                        </ul>
                       
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="breadcrumb">
            <a href="~/Home/">Начало</a> / Списък информационни обекти
        </div>
        <div class="main-content">
            <div class="page-content">
                <div id="app"></div>
                <script>
                    window.jsonData = {
                        jsonUrlFilter:
                            '@Url.Action("GetFilterControls", "UnifiedData")',
                        jsonUrlTable:
                            '@Url.Action("GetUniDataList", "UnifiedData")'
                    }
                </script>

                <script defer="defer" type="module" src="@Url.Content("~/dist/table/js/chunk-vendors.js")"></script>
                <script defer="defer" type="module" src="@Url.Content("~/dist/table/js/app.js")"></script>
                <link href="@Url.Content("~/dist/table/css/chunk-vendors.css")" rel="stylesheet">
                <script defer="defer" src="@Url.Content("~/dist/table/js/chunk-vendors-legacy.js")" nomodule></script>
                <script defer="defer" src="@Url.Content("~/dist/table/js/app-legacy.js")" nomodule></script>

            </div>
            <!-- End Page-content -->

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

</div>
