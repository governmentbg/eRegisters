@using SmartRegistry.Domain.Common
@using System.Collections.Generic;
@using SmartRegistry.Domain.Entities
@using PagedList.Mvc;
@using SmartRegistry.Web.Models


<div class="container-fluid">
    <!-- Begin page -->
    <div class="container">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="page-title mb-0 font-size-18">  @ViewBag.PageName </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="breadcrumb">
            <a href="~/Home/">Начало</a> /    <a href="~/UserGroups/">Потребителски групи</a> / @ViewBag.PageName
        </div>
        <div class="main-content">
            <div class="page-content">

                <!--  <a href="@ViewBag.GetControlsUrl">Линк за взимане на контролите на страницата</a> -->


                <div id="app"></div>
                <script>
          window.jsonData = {
            jsonUrlControls:'@ViewBag.GetControlsUrl',
            jsonUrlCreateEdit: '@Url.Action("SaveUserGroupData", "UserGroups")',
            }
                </script>

                <script defer="defer" type="module" src="@Url.Content("~/dist/dynamic-form/js/chunk-vendors.js")"></script>
                <script defer="defer" type="module" src="@Url.Content("~/dist/dynamic-form/js/app.js")"></script>
                <link href="@Url.Content("~/dist/dynamic-form/css/chunk-vendors.css")" rel="stylesheet">
                <script defer="defer" src="@Url.Content("~/dist/dynamic-form/js/chunk-vendors-legacy.js")" nomodule></script>
                <script defer="defer" src="@Url.Content("~/dist/dynamic-form/js/app-legacy.js")" nomodule></script>

            </div>
            <!-- End Page-content -->
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

</div>
<!-- end container-fluid -->
