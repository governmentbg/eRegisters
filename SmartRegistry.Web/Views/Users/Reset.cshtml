@using SmartRegistry.Domain.Common
@using System.Collections.Generic;
@using SmartRegistry.Domain.Entities
@using PagedList.Mvc;
@using SmartRegistry.Web.Models
@model User

<div class="container-fluid">
    <!-- Begin page -->
    <div class="container">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="page-title mb-0 font-size-18">@ViewBag.PageName </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="breadcrumb">
            <a href="~/Home/">Начало</a> /    <a href="~/Users/">Потребители</a> / @ViewBag.PageName
        </div>
        <div class="main-content">
            <div class="page-content">

                <!--     <a href="@ViewBag.GetControlsUrl">Линк за взимане на контролите на страницата</a><br />
            <a href="@ViewBag.MultyOPT">MultyOPT</a><br />
               <a href="@ViewBag.Multy">Multy</a>-->

                @using (Html.BeginForm("ResetAndSendMail", "Users", FormMethod.Post))
                {
                    <div class="form-group row">
                        <label for="Id" class="col-md-2 col-form-label" style="visibility:hidden"><p> @Model.Id </p></label>
                        <div class="col-md-10"><input id="Id" type="text" name="Id" class="form-control" value="@Model.Id" style="visibility:hidden"></div>
                        <div class="col-md-10"></div>
                    </div><div class="form-group row">
                        <label for="UserName" class="col-md-2 col-form-label"><p> Наименование </p></label>
                        <div class="col-md-10"><input id="Name" type="text" name="Name" class="form-control" value="@Model.Name"></div>
                    </div>
                    <div class="form-group row">
                        <label for="Email" class="col-md-2 col-form-label"><p> Имейл </p></label>
                        <div class="col-md-10"><!----><input id="Email" type="text" name="Email" class="form-control" value="@Model.Email"></div>
                    </div>
                    <div class="mb-3 row"><label class="col-md-2 col-form-label">&nbsp;</label><div class="col-md-10"><button type="submit" class="btn btn-primary pmt-2"> Изпрати имейл </button></div></div>
                }





                <script defer="defer" type="module" src="@Url.Content("~/dist/form/js/chunk-vendors.js")"></script>
                <script defer="defer" type="module" src="@Url.Content("~/dist/form/js/app.js")"></script>
                <link href="@Url.Content("~/dist/form/css/chunk-vendors.css")" rel="stylesheet">
                <script defer="defer" src="@Url.Content("~/dist/form/js/chunk-vendors-legacy.js")" nomodule></script>
                <script defer="defer" src="@Url.Content("~/dist/form/js/app-legacy.js")" nomodule></script>



            </div>
            <!-- End Page-content -->
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

</div>
<!-- end container-fluid -->
