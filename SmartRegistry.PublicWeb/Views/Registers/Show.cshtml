@using SmartRegistry.Domain.Common
@using System.Collections.Generic;
@using SmartRegistry.Domain.Entities
@model PagedResult<Register>

 <div class="container">
        <div class="main-content">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <div class="breadcrumb">
                            <a href="/">Начало</a> / @ViewBag.GroupName
                        </div>
                    </div>
                </div>
            
            </div>

            <div class="page-content">

                <h4 class="page-title mb-0 font-size-18">@ViewBag.AreaName</h4>

                @using (Html.BeginForm("Show", "Registers", FormMethod.Post, new { id = ViewBag.Id }))
                {
                    <div class="search-result">
                        @Html.TextBox("SearchName", null, new { @placeholder = "Търси в списъка" })
                        <button type="submit" value="Търси" class="submit" ><svg width="15px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"/></svg></button>
                    </div>
                }

<ul class="result-list">
                @foreach (Register rg in Model.Results)
                {
                    

                        <li><a href="@Url.Action("ShowData", "Registers", new { id = rg.Id})" class="elements">
                            @rg.Name
                        
                        <span>@rg.Description</span></a></li>
                   

                } </ul>

            </div>
            </div>

    </div>